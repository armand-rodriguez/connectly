<div class="container">
  <% if @accepted_conversations %>
    <% @accepted_conversations.each do |accepted_conversation| %>
      <div class="badge badge-dark mr-2"><%= link_to accepted_conversation.second_user.user_name, accepted_conversation, class: 'text-white'  %></div> <span class="badge badge-primary"><%= accepted_conversation.messages.count %> </span>
      <%= image_tag(accepted_conversation.second_user.profile.thumbnail_cropped, style: 'border-radius: 100%', class: 'mb-3') %>
    <% end %>
  <% end %>
  <% if @sent_conversations %>
    <% @sent_conversations.each do |sent_conversation| %>
      <div class="badge badge-dark mr-2"><%= link_to sent_conversation.user.user_name, sent_conversation, class: 'text-white' %></div> <span class="badge badge-primary"><%= sent_conversation.messages.count %></span>
      <%= image_tag(sent_conversation.user.profile.thumbnail_cropped, style: 'border-radius: 100%') %>
    <% end %>
  <% end %>
</div>
